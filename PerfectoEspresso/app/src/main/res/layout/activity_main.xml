<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#95C69C"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textToBeChanged"
        android:layout_width="268dp"
        android:layout_height="53dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/header_margin"
        android:layout_marginBottom="@dimen/header_margin"
        android:height="@android:dimen/notification_large_icon_height"
        android:autoText="false"
        android:background="#506550"
        android:contentDescription="heading"
        android:gravity="center_horizontal"
        android:hapticFeedbackEnabled="true"
        android:text="@string/hello_world"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/editTextUserInput"
        android:layout_width="317dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/header_margin"
        android:autofillHints=""
        android:background="#7E5E5858"
        android:hint="@string/type_something" />


    <Button
        android:id="@+id/changeTextBt"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/change_text" />

    <Button
        android:id="@+id/activityChangeTextBtn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/open_activity_and_change_text" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@android:dimen/thumbnail_width"
        android:adjustViewBounds="true"
        android:background="#CC9696"
        android:contentDescription="img"
        android:cropToPadding="true"
        android:rotation="-4"
        android:rotationX="9"
        android:rotationY="21"
        android:scaleX="8"
        android:src="@android:drawable/button_onoff_indicator_on" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="@android:string/ok"
        android:progress="@android:integer/config_mediumAnimTime"
        android:rotation="-3" />

</LinearLayout>
